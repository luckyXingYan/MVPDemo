<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SecondActivity">

    <Button
        android:id="@+id/btn_request"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="首页"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_three"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Three_Activity"
        android:textAllCaps="false"
        app:layout_constraintLeft_toRightOf="@id/btn_request"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_four"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Four_Activity"
        android:textAllCaps="false"
        app:layout_constraintLeft_toRightOf="@id/btn_three"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_snackBar"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="snackBar"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/btn_four"
        tools:ignore="MissingConstraints" />
</android.support.constraint.ConstraintLayout>